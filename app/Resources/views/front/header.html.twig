<!-- Fixed Header -->
{% trans_default_domain 'FrontBundle' %}

<header class="fixed fixed-top">
        <div class="navbar">
            <div class="logo">
                <a href="{{ path('Front_homepage') }}">
                    <img id="logo" src="{{ asset('front_assets/images/logo.png') }}" alt="Logo MARMO DESIGN">
                </a>
                <a class="title-header" id="logo-min" href="{{ path('Front_homepage') }}">
                    <span >Marble </span>
                    <span style="color: #4C5B5C">Factory</span>
                </a>
            </div>

            <div class="nav-icon">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <nav class="top_22">
            <ul>
                <li><a href="#home" class="one active">{{ 'front_header.home'|trans }}</a></li>
                <li><a href="#about" class="two">{{ 'front_header.about'|trans }}</a></li>
                <li><a href="#whatwedo" class="three">{{ 'front_header.services'|trans }}</a></li>
                <li><a href="#portfolio" class="four">{{ 'front_header.gallery'|trans }}</a></li>
                <li><a href="#blogs" class="five">{{ 'front_header.realisation'|trans }}</a></li>
                <li><a href="#contact" class="six">{{ 'front_header.contactus'|trans }}</a></li>
                <li>
                    <ul class="lang-switcher">
                        <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale' : 'en'})) }}" id="en" >En</a></li>
                        <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale' : 'fr'})) }}" id="fr">Fr</a></li>
                    </ul>
                </li>
            </ul>


        </nav>
</header>


