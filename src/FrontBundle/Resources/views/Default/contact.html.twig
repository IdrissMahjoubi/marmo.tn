{% extends 'base_front.html.twig' %}
{% trans_default_domain 'FrontBundle' %}

{% block header %}
    {% include 'front/fixed-header.html.twig' %}
{% endblock %}

{% block body %}
    <!-- Contact -->
    <div class="contact-page top_60" >
        <div class="container text-center padbot_120 background-contact">
            <div class="col-md-8 offset-md-2">
                <div class="section-title">
                    <h2 class="title wow fadeInUp" data-wow-delay="0.2s">{{ 'CONTACTEZ-NOUS'|trans}}</h2>
                </div>
                <p class="wow fadeInUp" data-wow-delay="0.4s">
                   {{ 'contact.desc'|trans }}</p>
            </div>
            <div class="flex-container">
                <div class="contact-box wow fadeInUp " data-wow-delay="0.6s">
                    <div class="information top_30 wow fadeInUp" data-wow-delay="0.6s">
                        <ul class="container details">
                            <li>
                                <p>E-mail:</p>
                                <a href="mailto:{{ Contact['showroom'].getEmail }}">
                                    {{ Contact['showroom'].getEmail }}
                                </a>
                            </li>
                            <li>
                                <p>{{ 'Showroom'|trans }}</p>
                                <a href="tel:{{ Contact['showroom'].getNumberone }}">
                                    {{ Contact['showroom'].getNumberone }}
                                </a>
                                <span> - </span>
                                <a href="tel:{{ Contact['showroom'].getNumbertwo }}">
                                    {{ Contact['showroom'].getNumbertwo }}
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="container-fluid">
                        <div class="map col-md-12 col-sm-6 col-xs-12">
                            <!--Map Canvas-->
                            <iframe src="{{ Contact['showroom'].getMap }}" width="100%" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
                <div class="contact-box wow fadeInUp" data-wow-delay="0.6s">
                    <div class="information top_30 wow fadeInUp" data-wow-delay="0.6s">
                        <ul class="container details">
                            <li>
                                <p>E-mail:</p>
                                <a href="mailto:{{ Contact['showroom'].getEmail }}">
                                    {{ Contact['showroom'].getEmail }}
                                </a>
                            </li>

                            <li>
                                <p>{{ 'Marbrerie'|trans }}</p>
                                <a href="tel:{{ Contact['usine'].getNumberone }}">
                                    {{ Contact['usine'].getNumberone }}
                                </a>
                                <span> - </span>
                                <a href="tel:{{ Contact['usine'].getNumbertwo }}">
                                    {{ Contact['usine'].getNumbertwo }}
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="container-fluid">
                        <div class="map col-md-12 col-sm-6 col-xs-12">
                            <!--Map Canvas-->
                            <iframe src="{{ Contact['usine'].getMap }}" width="100%" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- MAP -->
{% endblock %}