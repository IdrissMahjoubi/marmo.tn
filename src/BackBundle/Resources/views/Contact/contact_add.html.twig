{% extends 'back_base.html.twig' %}

{% block body %}
    <div class="card-body">
        <h4 class="header-title">Ajouter</h4>
        <p class="text-muted font-14">
            tous les champs sont obligatoires.
        </p>

        {{ form_start(form) }}

        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.location,{ 'attr': {'class' : 'form-control input-rounded','placeholder' : 'Position'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.adress,{ 'attr': {'class': 'form-control input-rounded','placeholder' : 'addresse'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.numberone,{ 'attr': {'class' : 'form-control input-rounded','placeholder' : '1er numero'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.numbertwo,{ 'attr': {'class': 'form-control input-rounded','placeholder' : '2eme numero'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.map,{ 'attr': {'class' : 'form-control input-rounded','placeholder' : 'map'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.email,{ 'attr': {'class': 'form-control input-rounded','placeholder' : 'email'} }) }}
            </div>
        </div>


        <input type="submit" class="btn btn-block btn-primary" value="Valider">

        {{ form_end(form) }}

    </div>
{% endblock %}

