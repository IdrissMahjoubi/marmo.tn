{% extends 'back_base.html.twig' %}

{% block body %}
    <div class="card-body">
        <h4 class="header-title">Contact</h4>

        <div class="table-responsive mt-3">
            <table class="table table-hover table-centered mb-0">
                <thead>
                <tr>
                    <th>Position</th>
                    <th>Adresse</th>
                    <th>1er numero</th>
                    <th>2eme numero</th>
                    <th>email</th>
                    <th>action</th>
                </tr>
                </thead>


                <tbody>
                {% for item in contact %}
                    <tr>
                        <td>
                            {{ item.location }}
                        </td>

                        <td>
                            {{ item.adress }}
                        </td>

                        <td>
                            {{ item.numberone }}
                        </td>
                        <td>
                            {{ item.numbertwo }}
                        </td>

                        <td>
                            {{ item.email }}
                        </td>



                        <td>
                            <div class="btn-group dropdown">
                                <a href="javascript: void(0);" class="dropdown-toggle arrow-none btn btn-light btn-sm" data-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-horizontal"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="{{ path('contact_edit',{ 'id': item.id}) }}"><i class="mdi mdi-pencil mr-1 text-muted"></i>Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}

