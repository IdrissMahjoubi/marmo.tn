{% extends 'back_base.html.twig' %}

{% block body %}
    <div class="card-body">
        <h4 class="header-title">Modifier {{ slider.name }}</h4>
        <p class="text-muted font-14">
            tous les champs sont obligatoires.
        </p>

        {{ form_start(form) }}

        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.name,{ 'attr': {'class' : 'form-control','placeholder' : 'titre'} }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.description,{ 'attr': {'class': 'form-control input-rounded','placeholder' : '1er description','rows':'5'} }) }}
            </div>
        </div>

        {{ form_widget(form.filter,{ 'attr': {'hidden':'true'} }) }}
        {{ form_widget(form.realisation,{ 'attr': {'hidden':'true'} }) }}
        {{ form_widget(form.description2,{ 'attr': {'hidden':'true'} }) }}
        {{ form_widget(form.name2,{ 'attr': {'hidden':'true'} }) }}

        <div class="form-group row">
            <div class="col-sm-10">
                <div class="input-group">
                    <div class="custom-file">
                        {{ form_widget(form.image.imageFile.file,{'attr': {'class': 'form-control input-rounded'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <div class="custom-control custom-checkbox form-check">
                    {{ form_row(form.image.imageFile.delete,{'label': 'Supprimer ? '}) }}
                </div>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-10">
                <div class="card">
                    <div class="card-body">
                        <img width="300" src="{{ asset('/uploads/'~ slider.image.imageName)}}" alt="{{ slider.image.imageName }}">
                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Valider">


        {{ form_end(form) }}


    </div>
{% endblock %}



