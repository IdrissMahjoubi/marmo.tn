{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
<div class="form-group row">
    <div class="col-sm-10">
        {{ form_widget(form.username,{ 'attr': {'class' : 'form-control input-rounded'} }) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-10">
        {{ form_widget(form.email,{ 'attr': {'class' : 'form-control input-rounded'} }) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-10">
        {{ form_widget(form.current_password,{ 'attr': {'class' : 'form-control input-rounded'} }) }}
    </div>
</div>
    <div>
        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-block btn-primary"/>
    </div>
{{ form_end(form) }}
